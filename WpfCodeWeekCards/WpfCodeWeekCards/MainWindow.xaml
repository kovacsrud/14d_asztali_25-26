<Window x:Class="WpfCodeWeekCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCodeWeekCards"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="CodeWeekCards" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle  x:Name="rectHeader" Grid.ColumnSpan="3" RadiusX="5" RadiusY="5" MouseDown="rectHeader_MouseDown">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="{StaticResource barnasvorosColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource aranyColor}" Offset="0.4"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            
        </Rectangle>
        <WrapPanel Grid.ColumnSpan="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <fa:FontAwesome x:Name="minGomb" Icon="WindowMinimize" FontSize="40" Margin="0,5,5,0" MouseDown="minGomb_MouseDown"/>
            <fa:FontAwesome x:Name="maxGomb" Icon="WindowMaximize" FontSize="40" Margin="0,5,5,0" MouseDown="maxGomb_MouseDown"/>
            <fa:FontAwesome x:Name="closeGomb" Icon="WindowClose" FontSize="40" Margin="0,5,5,0" MouseDown="closeGomb_MouseDown"/>
        </WrapPanel>
        
        
        <Image x:Name="randomKartya" Source="{Binding SelectedKartya.KartyaKep}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="6" Margin="5"/>
        <Button x:Name="buttonValaszt" Content="Választás" Grid.Column="1" Grid.Row="7" Width="200" Height="30" Click="buttonValaszt_Click" IsEnabled="False"/>
        <Button x:Name="buttonPiros" Content="Piros" Click="buttonPiros_Click" Grid.Column="2" Grid.Row="5" Width="200" Height="30"/>
        <Button x:Name="buttonFekete" Content="Fekete" Click="buttonFekete_Click" Grid.Column="2" Grid.Row="6" Width="200" Height="30"/>

        <TextBlock Text="{Binding Kassza}" x:Name="textblockKassza" FontSize="20" Grid.Column="2" Grid.Row="1"  TextAlignment="Center"/>

    </Grid>
</Window>
