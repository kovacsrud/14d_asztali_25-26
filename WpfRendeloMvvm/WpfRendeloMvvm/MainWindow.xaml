<Window x:Class="WpfRendeloMvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm"
        mc:Ignorable="d"
        Title="Rendelő" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        
        <Menu FontSize="20">
            <MenuItem Header="Fájl"/>
            <MenuItem Header="Szerkesztés"/>
            <MenuItem Header="Rendelési adatok">
                <MenuItem x:Name="menuitemKutyanevek" Header="Kutyanevek" Click="menuitemKutyanevek_Click"/>
                <MenuItem x:Name="menuitemRendelesek" Header="Rendelések" Click="menuitemRendelesek_Click"/>
            </MenuItem>
            <MenuItem Header="Súgó"/>

        </Menu>

    </Grid>
</Window>
