<Window x:Class="WpfCodeWeekCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCodeWeekCards"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="CodeWeekCards" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="{StaticResource sotetbarnaColor}" Opacity="0.3"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle  x:Name="rectHeader" Grid.ColumnSpan="3" RadiusX="5" RadiusY="5" MouseDown="rectHeader_MouseDown">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="{StaticResource barnasvorosColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource aranyColor}" Offset="0.4"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            
        </Rectangle>

        <Rectangle Grid.Column="2" Fill="{StaticResource arany}" Grid.Row="5" Grid.RowSpan="2" RadiusX="10" RadiusY="10">
            
        </Rectangle>

        <Rectangle Grid.Column="2" Fill="{StaticResource arany}" Grid.Row="2"  RadiusX="10" RadiusY="10">

        </Rectangle>
        <Rectangle Grid.Column="2" Fill="{StaticResource arany}" Grid.Row="3"  RadiusX="10" RadiusY="10">
            

        </Rectangle>
        <WrapPanel Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Tet}" Width="150"  Foreground="{StaticResource sotetbarna}" x:Name="textblockTet" FontSize="30" TextAlignment="Center" Margin="0,0,10,0"/>
            <Button Style="{DynamicResource GombStilus1}" x:Name="buttonPlus" Content="+" FontSize="16"  Width="50" Height="30" Click="buttonPlus_Click"/>
            <Button Style="{DynamicResource GombStilus1}" x:Name="buttonMinus" Content="-" FontSize="16"  Width="50" Height="30" Click="buttonMinus_Click"/>

        </WrapPanel>


        <WrapPanel Grid.ColumnSpan="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <fa:FontAwesome x:Name="minGomb" Foreground="{StaticResource barnasvoros}" Icon="WindowMinimize" FontSize="40" Margin="0,5,5,0" MouseDown="minGomb_MouseDown"/>
            <fa:FontAwesome x:Name="maxGomb" Foreground="{StaticResource barnasvoros}" Icon="WindowMaximize" FontSize="40" Margin="0,5,5,0" MouseDown="maxGomb_MouseDown"/>
            <fa:FontAwesome x:Name="closeGomb" Foreground="{StaticResource barnasvoros}" Icon="WindowClose" FontSize="40" Margin="0,5,5,0" MouseDown="closeGomb_MouseDown"/>
        </WrapPanel>
        
        
        <Image x:Name="randomKartya" Source="{Binding SelectedKartya.KartyaKep}" Grid.Column="0" Grid.Row="2" Grid.RowSpan="6" Margin="5"/>
        <Image x:Name="kartyaBack" Source="{Binding SelectedHatter}" Grid.Column="1" Grid.Row="2" Grid.RowSpan="6" Margin="5"/>



        <Button Style="{DynamicResource GombStilus1}" x:Name="buttonPiros" Content="Piros" Click="buttonPiros_Click" Grid.Column="2" Grid.Row="5" Width="200" Height="30"/>
        <Button Style="{DynamicResource GombStilus1}" x:Name="buttonFekete" Content="Fekete" Click="buttonFekete_Click" Grid.Column="2" Grid.Row="6" Width="200" Height="30" />

        <TextBlock Text="{Binding Kassza}" Foreground="{StaticResource sotetbarna}" x:Name="textblockKassza" FontSize="30" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" TextAlignment="Center"/>

    </Grid>
</Window>
