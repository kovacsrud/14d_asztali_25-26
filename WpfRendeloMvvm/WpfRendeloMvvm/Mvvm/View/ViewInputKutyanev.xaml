<Window x:Class="WpfRendeloMvvm.Mvvm.View.ViewInputKutyanev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm.Mvvm.View"
        mc:Ignorable="d"
        Title="Új kutyanév rögzítése" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockCim" Text="Új kutyanév felvitele" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxKutyanev" Text="{Binding SelectedKutyanev.KutyaNev}" FontSize="20" Width="300" Height="30"  Grid.Row="1"/>
        <Button x:Name="buttonRogzit" Content="Mentés" Width="200" Height="30" FontSize="18" Grid.Row="2" Click="buttonRogzit_Click"/>
    </Grid>
</Window>
