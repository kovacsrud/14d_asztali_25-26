<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiJegyzet14d2025.Mvvm.View.JegyzetView"
             Title="JegyzetView">
    <VerticalStackLayout>
        <Label 
            Text="Jegyzet App"
            FontAttributes="Bold"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <CollectionView x:Name="collectionJegyzetek" EmptyView="Nincsenek jegyzetek">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="LightBlue" StrokeShape="RoundRectangle 5,5,5,5" Margin="5" Padding="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Cim}"/>
                            <Label Text="{Binding Szoveg}" />
                            <DatePicker Date="{Binding Datum}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry x:Name="entryCim" Placeholder="Jegyzet címe" />
        <Entry x:Name="entrySzoveg" Placeholder="Jegyzet szövege" />

        <Button x:Name="buttonUj" Text="Új jegyzet" WidthRequest="200" Clicked="buttonUj_Clicked" />
        <Button x:Name="buttonModosit" Text="Jegyzet módosítása" WidthRequest="200" Clicked="buttonModosit_Clicked" />
        <Button x:Name="buttonTorol" Text="Törlés" WidthRequest="200" Clicked="buttonTorol_Clicked" />




    </VerticalStackLayout>
</ContentPage>