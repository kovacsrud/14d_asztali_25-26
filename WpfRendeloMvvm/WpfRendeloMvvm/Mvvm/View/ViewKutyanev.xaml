<Window x:Class="WpfRendeloMvvm.Mvvm.View.ViewKutyanev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm.Mvvm.View"
        mc:Ignorable="d"
        Title="Kutyanevek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Kutyanevek}" SelectedItem="{Binding SelectedKutyanev}" IsReadOnly="True" ColumnWidth="*" Grid.ColumnSpan="2" MouseDoubleClick="DataGrid_MouseDoubleClick"/>

        <Button x:Name="buttonUjKutyanev" Content="Új kutyanév" Grid.Row="1" Width="200" FontSize="16" Height="30" Click="buttonUjKutyanev_Click"/>
        <Button x:Name="buttonTorolKutyanev" Content="Kutyanév törlése" Grid.Row="1" Grid.Column="2" Width="200" FontSize="16" Height="30" Click="buttonTorolKutyanev_Click"/>


    </Grid>
</Window>
