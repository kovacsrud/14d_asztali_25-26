<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStart.StartPage"
             Title="StartPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Label 
            Text="Maui StartPage" FontSize="Large" FontAttributes="Bold"  TextColor="{StaticResource Magenta}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="entryAdat"  FontSize="20" />
        <Button x:Name="buttonSzamol" Text="Számolás" WidthRequest="200" Margin="10" Clicked="buttonSzamol_Clicked"/>
    </VerticalStackLayout>
</ContentPage>