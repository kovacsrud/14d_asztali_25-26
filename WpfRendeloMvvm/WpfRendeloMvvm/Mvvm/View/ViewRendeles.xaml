        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm.Mvvm.View"
        mc:Ignorable="d"
        Title="ViewRendeles" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Rendelesek}" IsReadOnly="True" ColumnWidth="*" SelectedItem="{Binding SelectedRendeles}"/>

    </Grid>
</Window>
