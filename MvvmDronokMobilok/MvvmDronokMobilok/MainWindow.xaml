<Window x:Class="MvvmDronokMobilok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmDronokMobilok"
        mc:Ignorable="d"
        Title="Mvvm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Fájl" />
            <MenuItem Header="Szerkesztés" />
            <MenuItem Header="Adatok">
                <MenuItem x:Name="menuitemDronok" Header="Drónok" Click="menuitemDronok_Click"/>
                <MenuItem x:Name="menuitemMobilok" Header="Mobilok" Click="menuitemMobilok_Click"/>
            </MenuItem>
            <MenuItem Header="Súgó" />
        </Menu>

    </Grid>
</Window>
