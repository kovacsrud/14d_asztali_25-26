<Window x:Class="WpfRendeloMvvm.Mvvm.View.ViewRendeles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm.Mvvm.View"
        mc:Ignorable="d"
        Title="ViewRendeles" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Rendelesek}" IsReadOnly="True" AutoGenerateColumns="False" ColumnWidth="*" SelectedItem="{Binding SelectedRendeles}"  Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kutya neve" Binding="{Binding Nev}"/>
                <DataGridTextColumn Header="Kutya fajtája" Binding="{Binding Fajta}" />
                <DataGridTextColumn Header="Kutya életkora" Binding="{Binding Eletkor}" />
                <DataGridTextColumn Header="Utolsó ellenőrzés" Binding="{Binding UtolsoEll}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonUjRendeles" Content="Új rendelés" Grid.Row="1" Width="200" Height="30" Click="buttonUjRendeles_Click"/>
        <Button x:Name="buttonTorolRendeles" Content="Törlés" Grid.Row="1" Grid.Column="1" Width="200" Height="30" Click="buttonTorolRendeles_Click"/>

    </Grid>
</Window>
