<Window x:Class="SzinkronGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzinkronGUI"
        mc:Ignorable="d"
        Title="Szinkronhangok" Height="500" Width="900">
    <Grid Margin="0,0,-75,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Menu FontSize="16">
            <MenuItem Header="Fájl">
                <MenuItem x:Name="menuitemMegnyitas" Header="Megnyitás" Click="menuitemMegnyitas_Click"/>
                <MenuItem x:Name="menuitemKilepes" Header="Kilépés" Click="menuitemKilepes_Click"/>
            </MenuItem>
        </Menu>
        <Image HorizontalAlignment="Left" Height="93" Margin="23,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Source="/szinkronstudio.png" />
        <ListBox x:Name="listboxNevek" Grid.Row="1" Width="150" Height="250" Margin="23,156,802,55" SelectionChanged="listboxNevek_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Height="89" Margin="195,24,0,298" Grid.Row="1" TextWrapping="Wrap" Text="Szinkronizált színészek" FontSize="50" Foreground="Green" Width="563" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="37" Margin="213,165,0,259" Grid.Row="1" TextWrapping="Wrap" Text="Színész neve:" FontSize="18"  Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="37" Margin="213,206,0,218" Grid.Row="1" TextWrapping="Wrap" Text="Film címe:" FontSize="18"  Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="37" Margin="213,245,0,179" Grid.Row="1" TextWrapping="Wrap" Text="Szerep:" FontSize="18"  Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="37" Margin="213,282,0,142" Grid.Row="1" TextWrapping="Wrap" Text="Magyar hangja:" FontSize="18"  Width="137"/>
        <TextBox x:Name="textboxSzineszNeve" HorizontalAlignment="Left" Height="30" Margin="356,167,0,0" Grid.Row="1" TextWrapping="Wrap" FontSize="18"  VerticalAlignment="Top" Width="336"/>
        <TextBox x:Name="textboxFilmCime" HorizontalAlignment="Left" Height="30" Margin="356,206,0,0" Grid.Row="1" TextWrapping="Wrap" FontSize="18"  VerticalAlignment="Top" Width="336"/>
        <TextBox x:Name="textboxSzerep" HorizontalAlignment="Left" Height="30" Margin="356,247,0,0" Grid.Row="1" TextWrapping="Wrap" FontSize="18"  VerticalAlignment="Top" Width="336"/>
        <TextBox x:Name="textboxMagyarHangja" HorizontalAlignment="Left" Height="30" Margin="356,285,0,0" Grid.Row="1" TextWrapping="Wrap" FontSize="18"  VerticalAlignment="Top" Width="336"/>
        <Button x:Name="buttonKorhataros" Content="Színész korhatáros filmjeinek száma" HorizontalAlignment="Left" Height="31" Margin="213,345,0,0" Grid.Row="1" VerticalAlignment="Top" Width="371" Click="buttonKorhataros_Click"/>
        <TextBlock x:Name="textblockKorhatarosDB" HorizontalAlignment="Left" Height="37" Margin="638,345,0,79" Grid.Row="1" TextWrapping="Wrap"  FontSize="18"  Width="120"/>





    </Grid>
</Window>
