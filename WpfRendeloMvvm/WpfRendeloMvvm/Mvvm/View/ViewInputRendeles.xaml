<Window x:Class="WpfRendeloMvvm.Mvvm.View.ViewInputRendeles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRendeloMvvm.Mvvm.View"
        mc:Ignorable="d"
        Title="Új rendelés" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockCim" Text="Új rendelés" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxEletkor" Text="{Binding SelectedRendeles.Eletkor}" FontSize="30" Grid.Row="1" Width="300" Height="40"/>
        <TextBox x:Name="textboxUtolsoEll" Text="{Binding SelectedRendeles.UtolsoEll}" FontSize="30" Grid.Row="2" Width="300" Height="40"/>
        <ComboBox x:Name="comboKutyanev" ItemsSource="{Binding Kutyanevek}" Grid.Row="3" Width="300" Height="40" FontSize="30"  DisplayMemberPath="KutyaNev" SelectedValuePath="Id" />
        <ComboBox x:Name="comboKutyafajta" ItemsSource="{Binding Kutyafajtak}" DisplayMemberPath="Nev" SelectedValuePath="Id"  Grid.Row="4" Width="300" Height="40" FontSize="30"/>
        <Button x:Name="buttonRogzit" Content="Rögzítés" Grid.Row="5" Width="200" Height="40" Click="buttonRogzit_Click"/>



    </Grid>
</Window>
