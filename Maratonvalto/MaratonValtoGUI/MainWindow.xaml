<Window x:Class="MaratonValtoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaratonValtoGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu FontSize="18" Grid.ColumnSpan="3">
            <MenuItem Header="Fájl">
                <MenuItem x:Name="menuitemMegnyitas" Header="Megnyitás" Click="menuitemMegnyitas_Click"/>
                <MenuItem x:Name="menuitemKilepes" Header="Kilépés" Click="menuitemKilepes_Click"/>
            </MenuItem>
        </Menu>
        <TextBlock Text="Maratonváltó versenyzői" FontSize="30" Foreground="Blue" FontFamily="Arial Black" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Futók listája" FontSize="16" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Kiválasztott futó adatai" FontSize="16" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox x:Name="listboxFutonevek" Grid.Row="3" Margin="10" Grid.RowSpan="12" SelectionChanged="listboxFutonevek_SelectionChanged"/>
        <TextBlock Text="Név" FontSize="16" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Rajtszáma" FontSize="16" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Születési év és hó" FontSize="16" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Csapat száma" FontSize="16" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Hanyadik körben futott" FontSize="16" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Köridő (mp)" FontSize="16" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="buttonCsapattarsak" Content="Csapattársak" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Width="300" Height="30" FontSize="18"/>
        <TextBlock x:Name="textBlockCsapattagok" FontSize="20" Text="" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="4" />

        <TextBox x:Name="textboxNev" Text="" Grid.Row="3" Grid.Column="2" Margin="10"/>
        <TextBox x:Name="textboxRajtszam" Text="" Grid.Row="4" Grid.Column="2" Margin="10"/>
        <TextBox x:Name="textboxSzulev" Text="" Grid.Row="5" Grid.Column="2" Margin="10"/>
        <TextBox x:Name="textboxCsapatszam" Text="" Grid.Row="6" Grid.Column="2" Margin="10"/>
        <TextBox x:Name="textboxHanyadikKor" Text="" Grid.Row="7" Grid.Column="2" Margin="10"/>
        <TextBox x:Name="textboxKorido" Text="" Grid.Row="8" Grid.Column="2" Margin="10"/>


    </Grid>
</Window>
