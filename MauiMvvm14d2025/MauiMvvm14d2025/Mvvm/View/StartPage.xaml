<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMvvm14d2025.Mvvm.View.StartPage"
             Title="StartPage" BackgroundColor="{StaticResource vilagos1}" NavigationPage.HasNavigationBar="False">

    <Border VerticalOptions="Fill" Margin="10" Stroke="{StaticResource sotet3Brush}" BackgroundColor="{StaticResource sotet1}" StrokeShape="RoundRectangle 20,20,20,20">
        <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*">
            <Label Text="Maui MVVM" FontSize="Large" TextColor="{StaticResource vilagos2}" VerticalOptions="Center" HorizontalOptions="Center" Grid.ColumnSpan="2"/>
            <Label Text="Vezetéknév" VerticalOptions="Center" HorizontalOptions="Center" TextColor="{StaticResource vilagos2}" FontSize="Medium" Grid.Row="2"/>
            <Label Text="Keresztnév" VerticalOptions="Center" HorizontalOptions="Center" TextColor="{StaticResource vilagos2}" FontSize="Medium" Grid.Row="3"/>
            <Entry Grid.Row="2" Text="{Binding Nev.Vezeteknev}" VerticalOptions="Center" TextColor="{StaticResource vilagos2}" Grid.Column="2" FontSize="Medium" />
            <Entry Grid.Row="3" Text="{Binding Nev.Keresztnev}" VerticalOptions="Center" TextColor="{StaticResource vilagos2}" Grid.Column="2" FontSize="Medium" />
            <Button x:Name="buttonTovabb" Text="Tovább" Grid.Row="5" Grid.ColumnSpan="2" Clicked="buttonTovabb_Clicked" Margin="20" />

        </Grid>
    </Border>

</ContentPage>